
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
  },
  "include": [
    "src/**/*"
  ]
}
